<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#ffff00"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        style="@style/MyRedTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registracija"
        android:id="@+id/txtRegistartion"
        android:textSize="40dp"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        />


    <!--<EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Korisničko ime"
        android:id="@+id/edtUserNameReg"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtRegistartion"
        android:background="#fffff0"
        android:textColor="#000000"
        android:textSize="18dp" />-->

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="E-mail"
        android:id="@+id/edtMail"
        android:background="#fffff0"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtRegistartion"
        android:layout_alignStart="@+id/txtRegistartion"
        android:layout_alignLeft="@+id/txtRegistartion"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Lozinka"
        android:id="@+id/edtPasswordReg"
        android:inputType="textPassword"
        android:background="#fffff0"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/edtMail"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@id/edtMail"
        android:layout_alignLeft="@id/edtMail"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Ponovljena lozinka"
        android:id="@+id/edtPassword2Reg"
        android:inputType="textPassword"
        android:background="#fffff0"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/edtPasswordReg"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@id/edtPasswordReg"
        android:layout_alignLeft="@id/edtPasswordReg"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:hint="Nisam robot"
        android:layout_alignStart="@id/edtPassword2Reg"
        android:layout_alignLeft="@+id/edtPassword2Reg"
        android:layout_below="@+id/edtPassword2Reg"
        android:id="@+id/cbRobot"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Registracija"
        android:id="@+id/btnRegistration"
        android:background="#0000ff"
        android:textSize="28dp"
        android:textColor="#ffffff"
        android:layout_below="@id/edtPassword2Reg"
        android:layout_marginTop="60dp"
        android:layout_alignStart="@id/edtPassword2Reg"
        android:layout_alignLeft="@id/edtPassword2Reg"
        />
    
    <ProgressBar
        android:id="@+id/pbRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


</RelativeLayout>
</ScrollView>