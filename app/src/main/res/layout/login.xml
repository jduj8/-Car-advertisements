<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#ffff00"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        style="@style/MyRedTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prijava"
        android:id="@+id/txtLogin"
        android:textSize="40dp"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        />


    <EditText
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:hint="E-mail"
        android:text=""
        android:id="@+id/edtMailLog"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtLogin"
        android:background="#fffff0"
        android:textColor="#000000"
        android:textSize="21dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:hint="Lozinka"
        android:text=""
        android:id="@+id/edtPassword"
        android:inputType="textPassword"
        android:background="#fffff0"
        android:textSize="21dp"
        android:textColor="#000000"
        android:layout_below="@+id/edtMailLog"
        android:layout_marginTop="37dp"
        android:layout_alignStart="@id/edtMailLog"
        android:layout_alignLeft="@id/edtMailLog"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Prijava"
        android:id="@+id/btnLogin"
        android:background="#0000ff"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@id/edtPassword"
        android:layout_marginTop="37dp"
        android:layout_alignStart="@id/edtPassword"
        android:layout_alignLeft="@id/edtPassword"
        />


    <ImageView
        android:id="@+id/imgRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="37dp"
        android:layout_marginRight="56dp"
        android:layout_alignStart="@id/btnLogin"
        android:layout_alignLeft="@id/btnLogin"/>

    <ProgressBar
        android:id="@+id/pbLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />



</RelativeLayout>
</ScrollView>