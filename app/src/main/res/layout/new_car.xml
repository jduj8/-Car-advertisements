<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffff87"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:id="@+id/txtNewAd"
                    style="@style/MyRedTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Novi oglas"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="28dp" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <EditText
                    android:id="@+id/edtMark"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"
                    android:hint="Marka"
                    android:text=""
                    android:textSize="16dp" />


                <EditText
                    android:id="@+id/edtModel"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:hint="Model"
                    android:text=""
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <EditText
                    android:id="@+id/edtYear"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="16dp"
                    android:hint="Godina"
                    android:inputType="number"
                    android:text=""
                    android:textSize="16dp" />


                <EditText
                    android:id="@+id/edtPrice"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:hint="Cijena"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edtConsummation"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="18dp"
                    android:hint="Potrošnja"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edtKm"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:hint="Prijeđeni kilometri"
                    android:inputType="number"
                    android:text=""
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edtPower"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="18dp"
                    android:hint="Snaga motora"
                    android:inputType="number"
                    android:text=""
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edtFuel"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:hint="Gorivo"
                    android:text=""
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <ScrollView
                    android:id="@+id/ScrollView01"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="24dp"
                    android:background="#ffff99"
                    android:layout_marginRight="21dp"
                    android:layout_height="100dp">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/edtDescribe"
                        android:hint="Detalji"
                        />

                </ScrollView>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edtTelefon"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="18dp"
                    android:hint="Telefon"
                    android:inputType="number"
                    android:text=""
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edtLocation"
                    android:layout_width="148dp"
                    android:layout_height="44dp"
                    android:hint="Lokacija"
                    android:text=""
                    android:textSize="16dp" />


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#FFFF00"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <ImageView
                    android:id="@+id/imgNew"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:textSize="28dp" />


            </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#FFFF87"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">
            <ProgressBar
                android:id="@+id/pbNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#FFFF87"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:background="#0000ff"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:text="Dodaj oglas"
                    android:textSize="28dp" />


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#FFFF87"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <!--<Button
                    android:id="@+id/btnRead"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:background="#0000ff"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:text="Read"
                    android:textSize="28dp" />-->

            </LinearLayout>

        </LinearLayout>

</ScrollView>